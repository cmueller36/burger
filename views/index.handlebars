<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>My Burgers</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <ul class="list-group">

                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                <button type="submit" data-id="{{id}}" data-devour="{{devoured}}" class="devour-burger">
                    Devour</button>
                {{/unless}} {{/each}}

            </ul>
        </div>
        <div class="col-md-6">
                 {{#each burgers}} {{#if this.devoured}}
                <li class="list-group-item">{{burger_name}}</li>
                {{/if}} {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <label for="burgerText">Insert New Burger</label>
                    <textarea class="form-control" id="burgerText" rows="3"></textarea>
                </div>
                <button id="newBurger" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>